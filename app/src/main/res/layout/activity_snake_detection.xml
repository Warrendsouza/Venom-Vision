<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
tools:context=".SnakeDetection">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:elevation="8dp"
    android:id="@+id/rel1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:gravity="end"
        android:background="@color/black">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/mCameraButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_post_btn_ripple"
                android:elevation="2dp"
                android:src="@drawable/camera_icon"
                android:padding="8dp"
                android:layout_margin="6dp"/>

            <ImageView
                android:id="@+id/mGalleryButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/add_post_btn_ripple"
                android:elevation="2dp"
                android:src="@drawable/add_gallry_detect"
                android:padding="8dp"
                android:layout_margin="6dp"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel1"
        android:layout_marginTop="1dp"
        android:background="@color/black">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/mPhotoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/diagram" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/mDetectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:background="@drawable/button_login_riple"
            android:fontFamily="@font/metropolis_bold"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:text="@string/buttonDiagnose"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/demoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:background="@color/gyellow"
            android:fontFamily="@font/metropolis_regular"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:padding="6dp"
            android:text="@string/detect_txt"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>